<form method="post" action="/users/{{user.id}}/reset">
  <header>Password Reset</header>
  <dl>
    <dt>Reset Code</dt>
    <dd><input type="text" name="resetCode" /></dd>
    <dt>Password</dt>
    <dd><input type="password" name="password" /></dd>
  </dl>
  <input type="submit" value="Set Password" />
</form>
